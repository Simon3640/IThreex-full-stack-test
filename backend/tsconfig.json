{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "inlineSources": true

  },
  "compileOnSave": true,
  "exclude": ["./src/**/*.spec.ts", "./src/**/*.mock.ts"],
  "include": ["./src/**/*"]
}
